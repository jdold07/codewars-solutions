{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "exclude": ["node_modules", "**/node_modules/*"],

  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "CommonJS",
    "target": "ESNext",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "auto",
    "moduleResolution": "nodenext",
    "types": ["node", "chai", "jest"]
  }
}
