{
  "exclude": ["**/node_modules/**"],

  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "CommonJS",
    "target": "ESNext",

    "strict": true,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "auto",
    "moduleResolution": "nodenext",
    "types": ["node", "chai", "jest"]
  }
}
